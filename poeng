#!/usr/bin/python3
'''
Main source file for poeng game
'''

import pygame
from ball import Ball
from pygame.locals import *

class Game:
    def __init__(self):
        self._running = True
        self.screen = None
        self.size = self.weight, self.height = 1280, 960
        self.clock = pygame.time.Clock()


    def on_key_down(self, event):
        print("poop")

    def on_init(self):
        pygame.init()
        pygame.mixer.music.load('sounds/bgm.mp3')
        pygame.mixer.music.play(-1)
        self.screen = pygame.display.set_mode(self.size, pygame.HWSURFACE | pygame.DOUBLEBUF)
        self._running = True
        self.objectList = pygame.sprite.Group()
        ball = Ball(0,0)
        self.objectList.add(ball)

    def on_event(self, event):
        if event.type == pygame.QUIT:
            self._running = False
        elif event.type == KEYDOWN:
            self.on_key_down(event)

    def on_loop(self):
        pass
    def on_render(self):
        self.drawBackgound()
        self.objectList.draw(self.screen)
        self.objectList.update()
        self.clock.tick(60)
        pygame.display.flip()

    def on_cleanup(self):
        pygame.quit()

    def on_execute(self):
        if self.on_init() == False:
            self._running = False

        #----- Main game loop ------
        while( self._running ):
            for event in pygame.event.get():
                self.on_event(event)
                self.on_loop()
            self.on_render()
        self.on_cleanup()

    def drawBackgound(self):
        self.screen.fill((0,0,0))


if __name__ == "__main__" :
    game = Game()
    game.on_execute()
